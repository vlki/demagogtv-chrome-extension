{
  "manifest_version": 2,
  "name": "DemagogTV",
  "version": "1.0.1",
  "description": "Sledujte rozhovor a zároveň, zda politik říká pravdu či ne. Videozáznamy debat propojené s hodnocením výroků od Demagog.cz.",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.ceskatelevize.cz/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "permissions": [
    "http://www.ceskatelevize.cz/*"
  ]
}
